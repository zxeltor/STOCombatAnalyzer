<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:classes="clr-namespace:zxeltor.StoCombatAnalyzer.Interface.Classes"
    xmlns:controls="clr-namespace:zxeltor.StoCombatAnalyzer.Interface.Controls"
    x:Class="zxeltor.StoCombatAnalyzer.Interface.MainWindow"
    d:DataContext="{d:DesignInstance Type={x:Type classes:CombatLogManager}}"
    mc:Ignorable="d"
    Title="" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid x:Name="uiGridMain">
        <Grid.Resources>
            <classes:DateTimeToExtendedDateStringConverter x:Key="dateTimeToExtendedDateStringConverter" />
            <classes:TypeToVisibilityConverter x:Key="typeToVisibilityConverter" />
            <DataTemplate x:Key="combatListItemTemplate">
                <Border BorderBrush="Black" BorderThickness="2" Padding="4" Margin="0">
                    <StackPanel Margin="0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="Started: " />
                            <TextBlock Text="{Binding CombatStart}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="Duration: " />
                            <TextBlock Text="{Binding Duration}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="Players: " />
                            <TextBlock Text="{Binding PlayerEntities.Count}" />
                            <TextBlock Text=", NonPlayers: " />
                            <TextBlock Text="{Binding NonPlayerEntities.Count}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="combatEntityItemTemplate">
                <Border BorderBrush="Black" BorderThickness="2" Padding="4" Margin="0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Name=" />
                            <TextBlock Text="{Binding OwnerDisplay}" />
                            <TextBlock Text="GameId=" Margin="8,0,0,0" />
                            <TextBlock Text="{Binding OwnerId}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Active=" />
                            <TextBlock Text="{Binding Duration}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Start=" />
                            <TextBlock
                                Text="{Binding CombatStart, Converter={StaticResource dateTimeToExtendedDateStringConverter}}" />
                            <TextBlock Text="End=" Margin="8,0,0,0" />
                            <TextBlock
                                Text="{Binding CombatEnd, Converter={StaticResource dateTimeToExtendedDateStringConverter}}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Combat Events=" />
                            <TextBlock Text="{Binding CombatEventList.Count}" />
                            <TextBlock Text="Kills=" Margin="8,0,0,0" />
                            <TextBlock Text="{Binding Kills}" />
                            <TextBlock Text="DPS=" Margin="8,0,0,0" />
                            <TextBlock Text="{Binding DPS}" />
                            <TextBlock Text="Max Damage=" Margin="8,0,0,0" />
                            <TextBlock Text="{Binding MaxDamage}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="selectedCombatDetailsTemplate">
                <Grid>
                    <StackPanel Margin="0,0,0,0" Height="50" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="Started: " />
                            <TextBlock
                                Text="{Binding CombatStart, Converter={StaticResource dateTimeToExtendedDateStringConverter}}" />
                            <TextBlock Text="Ended: " Margin="8,0,0,0" />
                            <TextBlock
                                Text="{Binding CombatEnd, Converter={StaticResource dateTimeToExtendedDateStringConverter}}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="Duration: " />
                            <TextBlock Text="{Binding Duration}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="Combat Entities:" />
                            <TextBlock Text="Players" Margin="8,0,0,0"
                                       Visibility="{Binding PlayerEntities, Converter={StaticResource typeToVisibilityConverter}}" />
                            <TextBlock Text="{Binding PlayerEntities.Count}" Margin="2,0,0,0"
                                       Visibility="{Binding PlayerEntities, Converter={StaticResource typeToVisibilityConverter}}" />
                            <TextBlock Text="Non-Players" Margin="8,0,0,0"
                                       Visibility="{Binding NonPlayerEntities, Converter={StaticResource typeToVisibilityConverter}}" />
                            <TextBlock Text="{Binding NonPlayerEntities.Count}" Margin="2,0,0,0"
                                       Visibility="{Binding NonPlayerEntities, Converter={StaticResource typeToVisibilityConverter}}" />
                        </StackPanel>
                    </StackPanel>
                    <GroupBox Header="Combat Entity List" Margin="0,65,0,0">
                        <TreeView x:Name="uiTreeViewCombatEntityList"
                                  SelectedItemChanged="uiTreeViewCombatEntityList_SelectedItemChanged">
                            <TreeViewItem Header="Players" ItemsSource="{Binding PlayerEntities}"
                                          ItemTemplate="{StaticResource combatEntityItemTemplate}"
                                          HorizontalContentAlignment="Stretch" />
                            <TreeViewItem Header="NonPlayers" ItemsSource="{Binding NonPlayerEntities}"
                                          ItemTemplate="{StaticResource combatEntityItemTemplate}"
                                          HorizontalContentAlignment="Stretch" />
                        </TreeView>
                    </GroupBox>
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        <TabControl x:Name="uiTableControlMain" Margin="0">
            <TabItem x:Name="uiTabLogAnalyzer" Header="Log File Analyzer">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="79*" />
                        <RowDefinition Height="60*" />
                    </Grid.RowDefinitions>

                    <GroupBox x:Name="uiGroupBoxCombatList" Grid.Row="0" Margin="10,10,0,10" HorizontalAlignment="Left"
                              Width="234">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Combat List" />
                                <TextBlock Text="(" Margin="4,0,0,0" />
                                <TextBlock Text="{Binding Combats.Count}" />
                                <TextBlock Text=")" />
                            </StackPanel>
                        </GroupBox.Header>
                        <ListView x:Name="uiListCombatSelector" ItemsSource="{Binding Combats}"
                                  ItemTemplate="{StaticResource combatListItemTemplate}"
                                  HorizontalContentAlignment="Stretch" Margin="0" IsSynchronizedWithCurrentItem="True" />
                    </GroupBox>

                    <Button Grid.Row="0" x:Name="uiButtonParseLog" Content="Parse Log(s)" Margin="0,10,10,0"
                            VerticalAlignment="Top" Height="26" HorizontalAlignment="Right" Width="105"
                            Click="uiButtonParseLog_Click" />

                    <GroupBox Grid.Row="0" x:Name="uiGroupBoxSelectedCombatDetails" Header="Selected Combat Details"
                              Margin="249,10,141,10" Padding="4,0,4,4">
                        <Grid>
                            <ContentControl Content="{Binding Combats}"
                                            ContentTemplate="{StaticResource selectedCombatDetailsTemplate}" />
                        </Grid>
                    </GroupBox>

                    <GridSplitter Grid.Row="1" Background="Gray" Height="2" Margin="10,0,10,0"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Top" />

                    <GroupBox x:Name="uiGroupBoxSelectedCombatEntity" Grid.Row="1" Margin="10,10,10,10"
                              Padding="0,4,0,0">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Selected Combat Entity Events" />
                                <TextBlock Text="(" Margin="4,0,0,0" />
                                <TextBlock Text="{Binding SelectedCombatEventList.Count}" />
                                <TextBlock Text=")" />
                            </StackPanel>
                        </GroupBox.Header>
                        <DataGrid ItemsSource="{Binding SelectedCombatEventList}" AutoGenerateColumns="False"
                                  CanUserReorderColumns="True" CanUserSortColumns="True"
                                  CanUserResizeColumns="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="FileName"
                                                    Binding="{Binding OriginalFileName, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="LineNumber"
                                                    Binding="{Binding OriginalFileLineNumber, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="IsModified"
                                                    Binding="{Binding IsOwnerModified, Mode=OneTime}" IsReadOnly="True" />
                                <DataGridTextColumn Header="Timestamp"
                                                    Binding="{Binding Timestamp, Converter={StaticResource dateTimeToExtendedDateStringConverter}, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="SourceLabel" Binding="{Binding SourceLabel, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="SourceId" Binding="{Binding SourceId, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="TargetLabel" Binding="{Binding TargetLabel, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="TargetId" Binding="{Binding TargetId, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="EventLabel" Binding="{Binding EventLabel, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="EventId" Binding="{Binding EventId, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Type" Binding="{Binding Type, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Flags" Binding="{Binding Flags, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Magnitude" Binding="{Binding Magnitude, Mode=OneTime}"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="MagnitudeBase"
                                                    Binding="{Binding MagnitudeBase, Mode=OneTime}" IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="347*" />
                        <RowDefinition Height="209*" />
                    </Grid.RowDefinitions>
                    <GridSplitter Background="Gray" Height="2" Margin="10,0,10,0" HorizontalAlignment="Stretch"
                                  VerticalAlignment="Top" Grid.Row="1" />

                    <GroupBox Header="log File Analyzer Settings" Grid.Row="0" Margin="10,10,10,10">
                        <Grid>
                            <controls:SettingsUserControl Margin="0,0,0,0" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Logging" Grid.Row="1" Margin="10,10,10,10">
                        <Grid>
                            <GroupBox Header="Log Summary" Margin="0,10,213,0">
                                <Grid Margin="0,0,0,0">
                                    <TextBox x:Name="uiTextBoxLog" Margin="4,4,4,4" BorderThickness="0"
                                             TextWrapping="NoWrap" Text="" HorizontalScrollBarVisibility="Auto"
                                             VerticalScrollBarVisibility="Auto" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Log File Settings" Margin="0,10,0,0" HorizontalAlignment="Right"
                                      Width="208">
                                <Grid>
                                    <Label Content="Logging Level:" HorizontalAlignment="Right" Height="30"
                                           Margin="0,6,93,0" VerticalAlignment="Top" Width="94"
                                           RenderTransformOrigin="0.542,0.587" />
                                    <ComboBox Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right"
                                              Width="74">
                                        <ComboBoxItem Content="DEBUG" />
                                        <ComboBoxItem Content="INFO" />
                                        <ComboBoxItem Content="WARN" />
                                        <ComboBoxItem Content="ERROR" />
                                        <ComboBoxItem Content="FATAL" />
                                        <ComboBoxItem IsSelected="True" Content="OFF" />
                                    </ComboBox>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>