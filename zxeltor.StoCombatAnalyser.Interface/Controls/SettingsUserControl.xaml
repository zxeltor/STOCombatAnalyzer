<UserControl x:Class="zxeltor.StoCombatAnalyzer.Interface.Controls.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:zxeltor.StoCombatAnalyzer.Interface.Controls"
             d:DataContext="{d:DesignInstance Type=local:SettingsUserControlBindingContext}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox Margin="0,0,0,0" Padding="2,2,2,2" HorizontalContentAlignment="Stretch">
            <ListBoxItem BorderThickness="2" BorderBrush="Black"  HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Padding="0,2,0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                        <TextBlock Text="Name:" />
                        <TextBlock Text="CombatLogPath" Margin="4,0,10,0" />
                        <TextBox Name="uiTextBoxCombatLogPath" Text="{Binding Path=CombatLogPath, Mode=TwoWay}" Margin="0,0,10,0" MinWidth="100" />
                        <StackPanel Orientation="Horizontal" Margin="10,0,10,0" HorizontalAlignment="Right">
                            <Button Name="uiButtonBoxCombatLogPathSelect" Content="select"
                                    Click="UiButtonBoxCombatLogPath_OnClick" Width="40" />
                            <Button Name="uiButtonBoxCombatLogPathDetect" Content="detect"
                                    Click="UiButtonBoxCombatLogPathDetect_OnClick" Width="40" Margin="10,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock>Description:</TextBlock>
                        <TextBlock Margin="4,0,10,0">The path to the STO log folder.</TextBlock>
                    </StackPanel>
                </Grid>
            </ListBoxItem>
            <ListBoxItem BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Padding="0,2,0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Width="Auto">
                        <TextBlock Text="Name:" />
                        <TextBlock Text="CombatLogPathFilePattern" Width="Auto" Margin="4,0,10,0" />
                        <TextBox Name="uiTextBoxCombatLogPathFilePattern" Width="Auto" Text="{Binding Path=CombatLogPathFilePattern, Mode=TwoWay}" MinWidth="100"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Width="Auto">
                        <TextBlock>Description:</TextBlock>
                        <TextBlock Margin="4,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">A file pattern used to select one or more combat log files from the log folder. This search pattern supports wildcards so one or more files can be selected.</TextBlock>
                    </StackPanel>
                </Grid>
            </ListBoxItem>
            <ListBoxItem BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Padding="0,2,0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="Name:" />
                        <TextBlock Text="MaxNumberOfCombatsToDisplay" Margin="4,0,10,0"/>
                        <TextBox Name="uiTextBoxMaxNumberOfCombatsToDisplay"
                                 Text="{Binding Path=MaxNumberOfCombatsToDisplay, Mode=OneWay}" Margin="0,0,10,0" MinWidth="100" />
                        <Button Name="uiButtonMaxNumberOfCombatsToDisplay" Content="set"
                                Click="UiButtonMaxNumberOfCombatsToDisplay_OnClick" Width="40"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Width="Auto">
                        <TextBlock>Description:</TextBlock>
                        <TextBlock Margin="4,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">The max number of combat instances to load and display. If set to zero, load them all.</TextBlock>
                    </StackPanel>
                </Grid>
            </ListBoxItem>
            <ListBoxItem BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Padding="0,2,0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="Name:" />
                        <TextBlock Text="HowLongBeforeNewCombat" Margin="4,0,10,0"/>
                        <TextBox Name="uiTextBoxHowLongBeforeNewCombat"
                                 Text="{Binding Path=HowLongBeforeNewCombat, Mode=OneWay}" Margin="0,0,10,0" MinWidth="100" />
                        <Button Name="uiButtonHowLongBeforeNewCombat" Content="set"
                                Click="UiButtonHowLongBeforeNewCombat_OnClick" Width="40"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Width="Auto">
                        <TextBlock>Description:</TextBlock>
                        <TextBlock Margin="4,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">How long to wait in seconds between attacks before an event is considered part of a new combat instance. If less than equal to 1, set the parameter to 10 seconds.</TextBlock>
                    </StackPanel>
                </Grid>
            </ListBoxItem>
        </ListBox>
    </Grid>
</UserControl>